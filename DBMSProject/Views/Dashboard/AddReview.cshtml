@{
    var bookId = ViewBag.BookId as int?;
    var studentId = ViewBag.StudentId;


}

<h1>Add Review</h1>

<form asp-action="AddReview" method="post">
    <input type="hidden" name="bookId" value="@bookId" />
    <input type="hidden" name="studentId" value="@studentId" />
    <div class="form-group">
        <label for="title">Review Title</label>
    <input type="text" name="title" placeholder="Review Title" class="form-control" required />
    </div>


    <div class="form-group">
        <label for="description">Review Description</label>
        <textarea name="description" placeholder="Review Description" class="form-control" rows="4" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>
