@model Book

@{
    ViewData["Title"] = "Delete Book";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete the following book?</h3>

<div>
    <h4>@Model.Title</h4>
    <p><strong>ISBN:</strong> @Model.Isbn</p>
    <p><strong>Published Year:</strong> @Model.PublishedYear</p>
    <p><strong>Is Borrowed:</strong> @Model.IsBorrowed</p>

    <form method="post" asp-action="DeleteBookConfirmed">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("ListBooks")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
